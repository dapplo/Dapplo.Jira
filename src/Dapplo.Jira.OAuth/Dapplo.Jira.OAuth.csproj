<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <Description>OAuth addition for Dapplo.Jira</Description>
    <TargetFrameworks>net10.0-windows;net8.0-windows;net480</TargetFrameworks>
    <PackageTags>atlassian;jira;dapplo</PackageTags>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Dapplo.HttpExtensions" Version="2.0.10" />
    <PackageReference Include="Dapplo.HttpExtensions.JsonNet" Version="2.0.10" />
    <PackageReference Include="Dapplo.HttpExtensions.OAuth" Version="2.0.10" />
  </ItemGroup>
  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <Reference Include="System.Drawing" />
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Dapplo.Jira\Dapplo.Jira.csproj" />
  </ItemGroup>
</Project>